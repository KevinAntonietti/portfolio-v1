<%- include('partials/header') %>
<div class="project__container">
  <div class="projectHeader">
    <!-- <span class="projectHeader__role"><%=item.role  %> </span> -->
    <div class="projectHeader__title">
      <h1 class="projectHeader__title__name"><%= item.name %></h1>
      <p class="projectHeader__title__id">0<%= item.id %></p>
    </div>
    <div class="projectHeader__separation"></div>
    <div class="projectHeader__introduction">
      <div class="projectHeader__introduction__type"><%= item.type%></div>
      <div class="tags"><%= item.tags%></div>
    </div>
    <div class="projectHeader__separation"></div>

    <div class="projectHeader__information">
      <span class="projectHeader__information_role"><%= item.role%> </span>
      <span class="projectHeader__separation__lateral"></span>
      <span class="projectHeader__information__year"><%= item.year%></span>

      <% if (item.team !== null) { %>
      <span class="projectHeader__separation__lateral"></span>

      <span class="projectHeader__information__team"><%= item.team%></span>
      <% } %>
    </div>
    <div class="projectHeader__separation"></div>

    <div class="projectHeader__description"><%- item.description%></div>
    <div class="projectHeader__separation"></div>

    <div class="projectHeader__link">
      <a
        class="projectHeader__link__website"
        href="<%= item.link  %> "
        target="_blank"
        title="Lien vers le site web du projet"
      >
        <p class="projectHeader__link__website__p">Voir le site</p>
        <svg
          class="projectHeader__link__website__svg"
          xmlns="http://www.w3.org/2000/svg"
          viewBox="0 0 40 40"
          title="Pictogramme de redirection vers le site internet du projet"
        >
          <path
            d="m20,3C10.61,3,3,10.61,3,20s7.61,17,17,17,17-7.61,17-17S29.39,3,20,3Zm7.7,24.36c-.2.2-.46.3-.72.3s-.53-.1-.73-.3l-12.2-11.6v6.86c0,.56-.46,1.02-1.02,1.02s-1.02-.46-1.02-1.02v-9.24s0,0,0,0c0-.13.03-.27.08-.39.05-.13.13-.24.22-.33,0,0,0,0,0,0,0,0,.02-.01.03-.02.09-.08.19-.15.3-.2.1-.04.22-.06.33-.07.02,0,.04-.01.06-.01h9.19c.56,0,1.02.46,1.02,1.02s-.46,1.02-1.02,1.02h-6.63l12.12,11.52c.4.4.4,1.05,0,1.45Z"
          />
        </svg>
      </a>

      <a
        class="projectHeader__link__github"
        href="<%= item.github %>"
        target="_blank"
        title="Lien vers le github du projet"
      >
        <p class="projectHeader__link__github__p">Voir le github</p>
        <svg
          class="projectHeader__link__github__svg"
          xmlns="http://www.w3.org/2000/svg"
          viewBox="0 0 40 40"
          title="logo github"
        >
