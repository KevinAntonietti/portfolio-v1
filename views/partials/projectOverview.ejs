<div class="projectOverview">
  <% for (const item of projets) {%>

  <div class="projectOverview__container">
    <a href="projets/<%= item.slug %> " class="projectOverview__container__preview">
      <img class="img-01" src="img/<%=item.thumbs01 %> " alt="" />
      <img class="img-02" src="img/<%=item.thumbs02 %>" alt="" />
    </a>

    <div class="projectOverview__container__separation"></div>

    <div class="projectOverview__container__title">
      <div class="projectOverview__container__title__name">
        <h2 class="projectOverview__container__title__name__project">
          <%= item.name.toUpperCase() %>
        </h2>
        <p class="projectOverview__container__title__name__type">
          <%= item.type%>
        </p>
      </div>

      <span class="projectOverview__container__title__id">
        0<%= item.id %>
      </span>
    </div>

    <div class="projectOverview__container__separation"></div>

    <div class="projectOverview__container__next">
      <div class="projectOverview__container__next__left">
        <p class="projectOverview__container__next__left__description"> <%= item.description.substring(0, 100) %> (...) </p>
        <p class="projectOverview__container__next__left__tags">
          <%= item.tags %>
        </p>
      </div>

      <a
        class="projectOverview__container__next__link"
        href="<%= item.link  %> "
        target="_blank"
      >
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 40 40">
          <path
            d="m20,3C10.61,3,3,10.61,3,20s7.61,17,17,17,17-7.61,17-17S29.39,3,20,3Zm7.7,24.36c-.2.2-.46.3-.72.3s-.53-.1-.73-.3l-12.2-11.6v6.86c0,.56-.46,1.02-1.02,1.02s-1.02-.46-1.02-1.02v-9.24s0,0,0,0c0-.13.03-.27.08-.39.05-.13.13-.24.22-.33,0,0,0,0,0,0,0,0,.02-.01.03-.02.09-.08.19-.15.3-.2.1-.04.22-.06.33-.07.02,0,.04-.01.06-.01h9.19c.56,0,1.02.46,1.02,1.02s-.46,1.02-1.02,1.02h-6.63l12.12,11.52c.4.4.4,1.05,0,1.45Z"
          /></svg
      ></a>
    </div>
    <div class="projectOverview__container__separation"></div>
  </div>
  <% }%>
</div>
